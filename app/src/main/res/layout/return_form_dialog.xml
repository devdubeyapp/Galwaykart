<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        android:layout_margin="10dp"
        android:text="Return Request"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        />
    <ImageButton
        android:id="@+id/imgBtCancel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_delete_icon"
        android:background="@drawable/blank"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"


        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/underline"
        android:layout_below="@+id/tv_title"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/underline"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantity"
            android:inputType="number"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:maxLength="6"
            android:id="@+id/return_qty"

            />

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Reason"
        android:layout_margin="10dp"
        android:id="@+id/tv_reason"
        android:layout_below="@+id/text_input_layout8"/>

    <Spinner
        android:id="@+id/spinner_reason"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/black"
        style="@style/spinner_style"
        android:layout_below="@+id/tv_reason"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Resolution"
        android:layout_margin="10dp"
        android:id="@+id/tv_resolution"
        android:layout_below="@+id/spinner_reason"/>


    <Spinner
        android:id="@+id/spinner_resolution"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/black"
        style="@style/spinner_style"
        android:layout_below="@+id/tv_resolution"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Package Condition"
        android:layout_margin="10dp"
        android:id="@+id/tv_condition"
        android:layout_below="@+id/spinner_resolution"/>


    <Spinner
        android:id="@+id/spinner_condition"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/black"
        style="@style/spinner_style"
        android:layout_below="@+id/tv_condition"
        android:layout_marginTop="5dp"
        />


    <Button
        android:id="@+id/btn_done"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"
        android:text="Done"
        android:textColor="#fff"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/spinner_condition"
        />


</RelativeLayout>