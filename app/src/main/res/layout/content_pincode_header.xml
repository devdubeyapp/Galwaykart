<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_lay_pincode"
    android:padding="6dp"
    android:background="@color/colorPrimary"
    android:layout_below="@+id/linear_zone_layout">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:weightSum="2"
            android:id="@+id/tbl_row1">

            <TextView
                android:id="@+id/btn_apply_pincode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:clickable="true"
                android:text="Enter Pincode"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorwhite"
                android:textSize="13dp" />
        </TableRow>
        <TableRow
            android:weightSum="2"
            android:id="@+id/tbl_row2"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_pincode"
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:layout_height="wrap_content"
                android:hint="Enter Pincode"
                android:inputType="text"
                android:padding="2dp"
                android:maxLength="6"
                android:layout_marginLeft="8dp"
                android:background="@drawable/roundtext"
                android:textSize="13dp"
                android:importantForAutofill="noExcludeDescendants"
                android:singleLine="true" />
            <TextView
                android:id="@+id/btn_save_pincode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:clickable="true"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:text="@string/st_pin_save"
                android:textColor="@color/colorYellow"
                android:textSize="14dp" />
        </TableRow>
        <TableRow
            android:weightSum="2"
            android:id="@+id/tbl_row3"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_pincode"
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:layout_height="25dp"
                android:inputType="number"
                android:layout_marginLeft="4dp"
                android:textSize="13dp"
                android:textColor="@color/colorWhite"
                android:singleLine="true" />
            <TextView
                android:id="@+id/btn_change_pincode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:clickable="true"
                android:layout_marginLeft="4dp"
                android:text="@string/st_change_zone"
                android:textColor="@color/colorYellow"
                android:textSize="13dp" />
        </TableRow>


    </TableLayout>

</RelativeLayout>


