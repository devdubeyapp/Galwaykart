<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_alert_title"
        android:text=""
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/close_green"
        android:id="@+id/btn_close_rebate" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_alert_title"
        android:background="@color/black"
        android:layout_marginTop="10dp"
        android:id="@+id/hr_line"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:hint="amount"
        android:id="@+id/tv_rebate_box"
        android:textSize="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/hr_line"
   />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_rebate_box"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_yes_rebate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ed_edit_rebate"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/colorYellow"
            android:padding="10dp"
            android:text="YES"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_no_rebate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/colorYellow"
            android:padding="10dp"
            android:text="No"
            android:textColor="@color/black" />
    </LinearLayout>

</RelativeLayout>