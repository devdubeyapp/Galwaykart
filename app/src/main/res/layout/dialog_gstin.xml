<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_alert_title"
        android:text=""
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/close_green"
        android:id="@+id/btn_close" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_alert_title"
        android:background="@color/black"
        android:layout_marginTop="10dp"
        android:id="@+id/hr_line"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="gstin"
        android:maxLength="15"
        android:inputType="textCapCharacters"
        android:id="@+id/ed_gstin_no"
        android:layout_below="@+id/hr_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_gstin_no"
        android:orientation="horizontal"
        android:weightSum="2">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_gstin_no"
        android:background="@color/colorYellow"
        android:textColor="@color/black"
        android:text="ADD GSTIN"
        android:id="@+id/btn_add_gstin"
        android:layout_weight="1"
        android:padding="10dp"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorYellow"
        android:textColor="@color/black"
        android:text="REMOVE GSTIN"
        android:padding="10dp"
        android:id="@+id/btn_remove_gstin"
        android:layout_margin="10dp"/>
    </LinearLayout>

</RelativeLayout>